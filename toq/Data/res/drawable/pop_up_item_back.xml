<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="8.0dip">
                <shape>
                    <solid android:color="@color/pop_up_menu_divider" />
                </shape>
            </item>
            <item android:right="8.0dip" android:bottom="1.0dip">
                <shape>
                    <solid android:color="@color/pop_up_item_pressed_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item android:right="8.0dip">
                <shape>
                    <solid android:color="@color/pop_up_menu_divider" />
                </shape>
            </item>
            <item android:right="8.0dip" android:bottom="1.0dip">
                <shape>
                    <solid android:color="@color/pop_up_menu_back" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>