<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/calendar_done_pressed" />
                </shape>
            </item>
            <item android:top="15.0dip">
                <shape>
                    <solid android:color="@color/done_pressed" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false" android:drawable="@color/calendar_done_pressed" />
</selector>